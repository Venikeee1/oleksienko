<div class="homepage" >
    <div class="homepage__slides">
        {{#each homepage.items}}
            <section class="homepage__item" style="background-image: url('{{background}}')">
                <div class="homepage__text">
                    {{#if title}}
                        <h2 class="main-title main-title--light">{{title}}</h2>
                    {{/if}}
                    {{#if titleBold}}
                        <h3 class="homepage__subtitle main-title main-title--semibold">{{titleBold}}</h3>
                    {{/if}}
                    {{#if subtitle}}
                        <h3 class="homepage__subtitle main-subtitle">{{subtitle}}</h3>
                    {{/if}}
                    {{#if description}}
                        <p class="slide__description">{{{description}}}</p>
                    {{/if}}
                </div>
                <div class="slide__number">
                    <span class="slide__value">{{number}}</span>
                </div>
            </section>
        {{/each}}
        <section class="homepage__item" style="background-image: url('{{homepage.achievement.background}}')">
            <div class="homepage__text">
                <h2 class="main-title main-title--light">{{homepage.achievement.title}}</h2>
                <h3 class="homepage__subtitle main-title main-title--semibold">{{homepage.achievement.titleBold}}</h3>
            </div>
            <div class="slide__number">
                <span class="slide__value">{{homepage.achievement.number}}</span>
            </div>
            <ul class="achievement__list">
                {{#each homepage.achievement.list}}
                    <li class="achievement__item">
                        <span class="achievement__quantity"><span class="exo--light">{{zeroAmount}}</span>{{value}}</span>
                        <span class="achievement__description">{{description}}</span></li>
                {{/each}}
            </ul>
        </section>
        <section class="homepage__item" style="background-image: url('{{homepage.video.background}}')">
            <div class="homepage__text">
                <h2 class="main-title main-title--light">{{homepage.video.title}}</h2>
                <h3 class="homepage__subtitle main-title main-title--semibold">{{homepage.video.titleBold}}</h3>
            </div>
            <div class="slide__number">
                <span class="slide__value">{{homepage.video.number}}</span>
            </div>
            <a href="#" class="homepage__play-btn"></a>
        </section>
    </div>
    <div class="scroll-more">
        <span class="scroll-more__text exo--thin">Scroll <span class="scroll-more--bold exo--bold">Down</span></span>
    </div>
</div>
