
<div class="homepage" >
    <div class="red-squares">
        <div class="red-square"></div>
    </div>
    <div class="dila__letters">
        <span class="dila__letter-container" data-index="2">
            <a href="#" class="dila__letter" ><span>A</span></a>
            <a href="" class="dila__word" >Architecture</a>
        </span>
        <span class="dila__letter-container" data-index="3">
            <a href="#" class="dila__letter dila__letter--i"><span>I</span></a>
            <a href="" class="dila__word" >Interior design</a>
        </span>
        <span class="dila__letter-container" data-index="4">
            <a href="#" class="dila__letter"><span>L</span></a>
            <a href="" class="dila__word" >Landscape design</a>
        </span>
        <span class="dila__letter-container"  data-index="5">
            <a href="#" class="dila__letter"><span>D</span></a>
            <a href="" class="dila__word">Design</a>
        </span>
    </div>
    <div class="homepage__slides">
        {{#each homepage.items}}
            <section class="homepage__item" style="background-image: url('{{background}}')">
                <div class="homepage__text">
                    {{#if title}}
                        <h2 class="main-title main-title--light homepage__animation-title">{{title}}</h2>
                    {{/if}}
                    {{#if titleBold}}
                        <h3 class="homepage__subtitle main-title main-title--semibold homepage__animation-title">{{titleBold}}</h3>
                    {{/if}}
                    {{#if subtitle}}
                        <h3 class="homepage__subtitle main-subtitle homepage__animation-title">{{subtitle}}</h3>
                    {{/if}}
                    {{#if description}}
                        <p class="slide__description homepage__animation-title">{{{description}}}</p>
                    {{/if}}
                </div>
                <div class="slide__number">
                    <span class="slide__value">{{number}}</span>
                </div>
            </section>
        {{/each}}
        <section class="homepage__item" style="background-image: url('{{homepage.achievement.background}}')">
            <div class="homepage__text">
                <h2 class="main-title main-title--light homepage__animation-title">{{homepage.achievement.title}}</h2>
                <h3 class="homepage__subtitle main-title main-title--semibold homepage__animation-title">{{homepage.achievement.titleBold}}</h3>
            </div>
            <div class="slide__number">
                <span class="slide__value">{{homepage.achievement.number}}</span>
            </div>
            <ul class="achievement__list">
                {{#each homepage.achievement.list}}
                    <li class="achievement__item">
                        <span class="achievement__quantity"><span class="exo--light">{{zeroAmount}}</span>{{value}}</span>
                        <span class="achievement__description">{{description}}</span></li>
                {{/each}}
            </ul>
        </section>
        <section class="homepage__item" style="background-image: url('{{homepage.video.background}}')">
            <div class="homepage__text">
                <h2 class="main-title main-title--light homepage__animation-title">{{homepage.video.title}}</h2>
                <h3 class="homepage__subtitle main-title main-title--semibold homepage__animation-title">{{homepage.video.titleBold}}</h3>
            </div>
            <div class="slide__number">
                <span class="slide__value">{{homepage.video.number}}</span>
            </div>
            <a href="#" class="homepage__play-btn"></a>
        </section>
    </div>
    <div class="scroll-more">
        <span class="scroll-more__text exo--thin">Scroll <span class="scroll-more--bold exo--bold">Down</span></span>
    </div>
</div>
